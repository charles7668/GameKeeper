<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <Platforms>AnyCPU;x86;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DllLoader\DllLoader.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\GameKeeperCore\GameKeeperCore.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <Target Name="CopyNativeUtils" AfterTargets="Build">
    <PropertyGroup>
      <NativePlatform Condition="'$(Platform)' == 'x64'">x64</NativePlatform>
      <NativePlatform Condition="'$(Platform)' == 'x86' or '$(Platform)' == 'AnyCPU'">Win32</NativePlatform>
      <NativeConfiguration Condition="'$(Configuration)' == 'Debug'">Debug</NativeConfiguration>
      <NativeConfiguration Condition="'$(Configuration)' == 'Release'">Release</NativeConfiguration>
      <NativeOutputPath Condition="'$(NativePlatform)' == 'x64'">..\$(NativePlatform)\$(NativeConfiguration)\</NativeOutputPath>
      <NativeOutputPath Condition="'$(NativePlatform)' == 'Win32'">..\$(NativeConfiguration)\</NativeOutputPath>
    </PropertyGroup>
    <ItemGroup>
      <NativeDlls Include="$(NativeOutputPath)DllLoader.dll;$(NativeOutputPath)GameKeeperCore.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(NativeDlls)" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true" />
  </Target>
</Project>
